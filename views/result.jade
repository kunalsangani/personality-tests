extends layout

block content
	.nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') FIND YOUR TYPE
			#navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li: a(href='/test/mbti') TAKE THE TEST
					li: a(href='/test/compatibility') COMPATIBILITY

	#headline-container.container-fluid
		.row
			.col-xs-12
				h4 Your type is
		.row
			.col-xs-12
				h1#result-title= headline_result.short
		.row
			.col-xs-12
				h2#result-subtitle The #{headline_result.description}
		#type-breakdown.row
			for result,index in results 		
				.col-xs-6.col-sm-3
					.well
						p.dimension-result-percentage= (Math.round(result,0)) + "%"
						p.dimension-result-name= test.metrics[index][binary_results[index]].long


