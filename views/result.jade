extends layout

block content
	section.panel
		h1#result_banner.mid_panel= headline_result
	each metric,index in test.metrics
		section.panel.long_panel
			.mid_panel.container
				.row
					.col-xs-4
						p.metric #{metric.no.long}
					.col-xs-4
						p.percentage_fit #{Math.floor(100 * results[index])}%
					.col-xs-4
						p.metric #{metric.yes.long}

