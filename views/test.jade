extends layout

block content
	.container#title_container
		.row
			.col-lg-12
				h1= test.name
	.container#test_container
		form(action='/test/mbti/result', method='POST')
			.owl-carousel
				- for(var i = 0; i < test.questions.length/5; i++) {
					.carousel-question-wrapper
						each subindex in [0, 1, 2, 3, 4]
							if test.questions[5*i + subindex]
								.row
									.col-lg-12
										p.statement #{test.questions[5*i + subindex].text}
								.row
									.radio_row.col-lg-12
										p.disagree DISAGREE
										each val in [-3, -2, -1, 0, 1, 2, 3]
											input.radiobtn(name=test.questions[5*i + subindex].id, type='radio', value=val)
											label(radio_value=val)
											// span.glyphicon.glyphicon-thumbs-up(radio_value=val)
										p.agree AGREE	
								hr							
				- }
			.row
				.col-lg-12
					button.btn.btn-default#next-page(type='button') Next
					button.btn.btn-default#submit-form(type='submit') Submit

