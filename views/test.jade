extends layout

block content
	.nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') FIND YOUR TYPE
			#navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li: a(href='/test/mbti') TAKE THE TEST
					li: a(href='/test/compatibility') COMPATIBILITY

	.container#title-container
		.row
			.col-lg-12
				h1#title FIND YOUR TYPE
				// h1= test.name
				h4#title-description Find your type in less than 15 minutes using our quick test. Mark the extent to which you agree or disagree with the statements below. Try to avoid marking "Neutral."
		hr

	.container#test-container
		form(action='/test/mbti/result', method='POST')
			.owl-carousel
				- for(var i = 0; i < test.questions.length/6; i++) {
					.carousel-question-wrapper
						each subindex in [0, 1, 2, 3, 4, 5]
							if test.questions[6*i + subindex]
								.row
									.col-xs-12
										p.statement #{test.questions[6*i + subindex].text}
								.row
									.radio_row.col-xs-12
										p.disagree.hidden-xs DISAGREE
										// each val in [-3, -2, -1, 0, 1, 2, 3]
										//	input.radiobtn(name=test.questions[6*i + subindex].id, type='radio', value=val)
										//	label(radio_value=val)
										p.agree.hidden-xs AGREE
										input.slider(type='range',min='-3',max='3',value='0')
								.row.visible-xs
									// .col-xs-12
									//	p.disagree DISAGREE
									//	p.agree AGREE
										
								hr.question-break							
				- }
			.row
				.col-lg-12#submit-div
					button.btn.btn-default#next-page(type='button') Continue
					button.btn.btn-default#submit-form(type='submit') Submit

