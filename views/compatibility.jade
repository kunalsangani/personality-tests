extends layout

block content
	.nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') FIND YOUR TYPE
			#navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li: a(href='/test/mbti') TAKE THE TEST
					li: a(href='/test/compatibility') COMPATIBILITY

	#headline-container.container-fluid
		.row
			.col-xs-12
				h1#title Test compatibility
		.row
			.col-xs-12
				h4 Use our tool to calculate your compatibility with another as a teammate, co-worker, friend, and romantic partner. If you haven't already, take our test to find your personality type, and enter your results below.
		form(action='/test/compatibility/run', method='POST')
			for person_index in [1, 2]
				hr
				.row
					.col-xs-12
						h2.person-label Person #{person_index}
				.row.type-input
					for metric,index in test.metrics
						.col-xs-12.col-sm-6.col-md-3
							.row.button-group-row
								.col-xs-12
									.btn-group.btn-group-justified(data-toggle="buttons")
										label.btn.btn-primary.active.metric-button
											#[input.metric-toggle(type="radio", name= person_index + "" + index, checked, value="0")] #{metric[0].long}
										label.btn.btn-primary.metric-button
											#[input.metric-toggle(type="radio", name= person_index + "" + index, value="1")] #{metric[1].long}
							.row.well-row
								.col-xs-12
									.well
										//p.dimension-percentage(contenteditable="true", name= person_index + "" + index) 50%
										input.percentage-input(name= person_index + "" + index, value="50%")
										p.dimension-name(name= person_index + "" + index) #{metric[0].long}
			.row
				.col-xs-12
					button.btn.btn-default Submit
		.row
			.col-xs-12
				.well#result-wrapper
					.row
						.col-xs-12 
							h2 Your result:
					.row
						.col-xs-12 
							p#result-percentage compatibility


